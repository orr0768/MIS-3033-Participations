@model IEnumerable<_P_MVC_EF_Orr.Models.Student>

@{
    ViewBag.Title = "Index";
}
    
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">  



    @foreach (var item in Model)
    {
<div class="row">
    <div class="card" style="width:25%;">
        <div class="card-body">
            <h4 class="card-title"> @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) </h4>
           

            @Html.DisplayNameFor(model => model.FavoriteColor):

            @Html.DisplayFor(modelItem => item.FavoriteColor)
        </div>


    </div>
</div>
    }


